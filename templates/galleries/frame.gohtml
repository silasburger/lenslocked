<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>

  <body class="flex flex-col min-h-screen bg-gray-100">
    <!-- Alerts -->
    {{if errors}}
      {{range errors}}
        {{template "alert" .}}
      {{ end }}
    {{ end }}

    <main class="flex-grow">
      {{template "page" .}}
    </main>

    {{template "footer" .}}

    <script>
      function closeAlert(event) {
        var alert = event.target.closest(".closeable");
        alert.classList.add("hidden");
      }
    </script>
  </body>
</html>

{{define "footer"}}
<footer class="bg-gray-800 text-white py-4">
  <div class="flex justify-center space-y-4">
    <div>
      <p class="text-sm text-neutral-500 dark:text-neutral-400">
        Copyright © 2028 Silas Burger. All rights reserved. Built with ☕ and 🍔
        in Berlin, Germany.
      </p>
    </div>
  </div>
</footer>
{{ end }}

{{define "alert"}}
<div class="closeable py-4 px-2">
  <div class="flex bg-red-100 rounded px-2 py-2 text-red-800 mb-2">
    <div class="flex-grow">
      {{.}}
    </div>
    <a href="#" onclick="closeAlert(event)">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="w-6 h-6"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M9.75 9.75l4.5 4.5m0-4.5l-4.5 4.5M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
        />
      </svg>
    </a>
  </div>
</div>
{{ end }}
